<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/admin_head.ejs") %>
<body>
    <%- include("./partials/admin_nav.ejs") %>

    <!-- Admin Edit Reservation Section -->
    <section id="editReservation" class="container admin-section">
        <h1>Edit a Reservation</h1>
        <hr>
        <div class="add-res-date">
            <label for="datePicker"><strong>Select Date:</strong></label>
            <input type="date" id="datePicker" class="form-control" name="date" value="<%= selectedDate %>">
        </div>
        <div class="sample-reservation">
            <h3>Sample Reservation Slots</h3>
            <img id="sample_sched2" src="images/sample-res.png" alt="Reservation Slots">
        </div>
        <form action="/admin_edit_res" method="POST">
            <input type="hidden" id="selectedDate" name="date" value="<%= selectedDate %>">
            <div class="info">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">First Name</span>
                    <input type="text" class="form-control" name="firstName" value="<%= user.firstName %>" required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Last Name</span>
                    <input type="text" class="form-control" name="lastName" value="<%= user.lastName %>" required>
                </div>
                <div class="selects">
                    <label for="location">Location:</label>
                    <select class="form-select form-select-sm" name="location" required>
                        <option selected>Any Floor</option>
                        <option value="1">1st Floor</option>
                        <option value="2">2nd Floor</option>
                        <option value="3">3rd Floor</option>
                    </select>
            
                    <label for="room">Room:</label>
                    <select class="form-select form-select-sm" name="room" required>
                        <option selected>Any Room</option>
                        <option value="1A">Room 1A</option>
                        <option value="1B">Room 1B</option>
                        <option value="2A">Room 2A</option>
                        <option value="2B">Room 2B</option>
                    </select>
                    <label for="time">Time:</label>
                    <select class="form-select form-select-sm" name="time" required>
                        <option selected>Any Time</option>
                        <option selected>Any Time</option>
                        <option value="1">07:00-08:00</option>
                        <option value="2">08:00-09:00</option>
                        <option value="3">09:00-10:00</option>
                        <option value="4">10:00-11:00</option>
                        <option value="5">11:00-12:00</option>
                        <option value="6">12:00-13:00</option>
                        <option value="7">13:00-14:00</option>
                        <option value="8">14:00-15:00</option>
                        <option value="9">15:00-16:00</option>
                        <option value="10">16:00-17:00</option>
                        <option value="11">17:00-18:00</option>
                        <option value="12">18:00-19:00</option>
                    </select>
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                <label class="form-check-label" for="flexCheckChecked">
                    Yes, all information is correct.
                </label>
            </div>
            <a class="btn btn-outline-secondary" href="admin_view_res.html">Cancel</a>
            <button type="submit" class="btn btn-success">Save  Reservation</button>
        </form>
    </section>
    
    <script>
        document.getElementById("datePicker").addEventListener("change", function () {
            document.getElementById("selectedDate").value = this.value;
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
