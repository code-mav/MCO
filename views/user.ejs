<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Home Page</title>
    <link rel="stylesheet" href="/css/user_style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e670541006.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Library Reservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <!-- Profile & Logout -->
                <% if (user) { %>
                    <li class="nav-item dropdown list-unstyled">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="far fa-user-circle" id="navi-bar"></i>&nbsp;&nbsp;<%= user.firstName %> <%= user.lastName %>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/user_check_profile">Check Profile</a></li>
                          <li><a class="dropdown-item" href="/user_edit_acc">Edit Profile</a></li>
                          <li><hr class="dropdown-divider"></li>
                          <li><a class="dropdown-item" href="/logout" id="logoutBtn">Logout</a></li>
                        </ul>
                    </li>
                <% } else { %>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- User Home Section -->
    <section id="userHome" class="container user-section mt-4">
        <h2>Welcome, <%= user.firstName %></h2>
        <p>&emsp;&emsp;Reserve Rooms and Check/Edit User Profile</p>
        <hr>
        <div class="user-container">
            <div class="user-buttons">
                <a id="viewReservationsBtn" class="btn btn-outline-success" href="/user_view_res">
                    View Reservations &nbsp; <i class="arrow right"></i>
                </a>
                <a id="manageAccsBtn" class="btn btn-outline-success" href="/user_check_profile">
                    Check User Profile &nbsp; <i class="arrow right"></i>
                </a>
            </div>
            <div class="divider"></div>
            <div class="full-schedule">
                <h3>Sample Schedule</h3>
                <img id="sample_sched" src="/images/sample_schedule.jpg" alt="Schedule" width="500" height="500">
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>
