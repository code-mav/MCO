<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/user_head.ejs") %>
<body>
    <%- include("./partials/user_nav.ejs") %>

    <!-- User Home Section -->
    <section id="userHome" class="container user-section mt-4">
        <h2>Welcome, <%= user.firstName %></h2>
        <p>&emsp;&emsp;Reserve Rooms and Check/Edit User Profile</p>
        <hr>

        <div class="user-container">
            <div class="user-buttons">
                <a id="viewReservationsBtn" class="btn btn-outline-success" href="/user/user_view_res">
                    View Reservations &nbsp; <i class="arrow right"></i>
                </a>
                <a id="manageAccsBtn" class="btn btn-outline-success" href="/user/profile/<%= user._id %>">
                    Check User Profile &nbsp; <i class="arrow right"></i>
                </a>
            </div>
            <div class="divider"></div>

            <!-- ðŸ“Œ Global Reservations Table -->
            <div class="full-schedule">
                <h3>Global Reservations</h3>
                <% if (reservations.length > 0) { %>
                    <table class="table table-secondary table-striped table-bordered border-success-subtle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Room</th>
                                <th>Date</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reservations.forEach((res, index) => { %>
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><%= res.userName %></td>
                                    <td><%= res.location %></td>
                                    <td><%= res.room %></td>
                                    <td><%= res.date %></td>
                                    <td><%= res.time %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="text-center">No reservations at the moment.</p>
                <% } %>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>