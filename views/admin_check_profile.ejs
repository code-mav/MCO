<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/admin_head.ejs") %>
<body>
    <%- include("./partials/admin_nav.ejs") %>

    <!-- Admin Profile Section -->
    <section id="checkProfile" class="container admin-section">
        <div class="info">
            <i class='far fa-user-circle' id="profile"></i>
            <hr>
            <% if (admin) { %>
                <div class="text-details">
                    <span class="input-group-text" id="basic-addon1">First Name</span>
                    <span class="input-group-text" id="personal-details"><%= admin.firstName %></span>
                </div>
                <div class="text-details">
                    <span class="input-group-text" id="basic-addon1">Last Name</span>
                    <span class="input-group-text" id="personal-details"><%= admin.lastName %></span>
                </div>
                <div class="text-details">
                    <span class="input-group-text" id="basic-addon1">Email</span>
                    <span class="input-group-text" id="personal-details"><%= admin.email %></span>
                </div>
                <div class="text-details">
                    <span class="input-group-text" id="basic-addon1">Address</span>
                    <span class="input-group-text" id="personal-details"><%= admin.address %></span>
                </div>
            <% } else { %>
                <p>No admin data available.</p>
            <% } %>
        </div>
        <a class="btn btn-outline-secondary" href="/admin">Back</a>
        <a class="btn btn-outline-success" href="/admin/edit_admin/<%= admin._id %>">Edit Profile</a>
    </section>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>
