<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/user_head.ejs") %>
<body>
  <%- include("./partials/user_nav.ejs") %>

  <!-- User Profile Section -->
  <section id="checkProfile" class="container user-section mt-4">
    <div class="info">
      <i class="far fa-user-circle" id="profile"></i>
      <hr>
      <% if (user) { %>
        <div class="text-details">
          <span class="input-group-text" id="basic-addon1">First Name</span>
          <span class="input-group-text" id="personal-details"><%= user.firstName %></span>
        </div>
        <div class="text-details">
          <span class="input-group-text" id="basic-addon1">Last Name</span>
          <span class="input-group-text" id="personal-details"><%= user.lastName %></span>
        </div>
        <div class="text-details">
          <span class="input-group-text" id="basic-addon1">Email</span>
          <span class="input-group-text" id="personal-details"><%= user.email %></span>
        </div>
        <div class="text-details">
          <span class="input-group-text" id="basic-addon1">Address</span>
          <span class="input-group-text" id="personal-details"><%= user.address %></span>
        </div>
      <% } else { %>
        <p>No user data available.</p>
      <% } %>
    </div>
    <a class="btn btn-outline-secondary" href="/user">Back</a>
    <a class="btn btn-outline-success" href="/user/edit/<%= user._id %>">Edit Profile</a>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>
