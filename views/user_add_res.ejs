<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a Reservation</title>
    <link rel="stylesheet" href="/css/user_style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e670541006.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Library Reservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div id="userProfile" class="d-flex align-items-center text-white">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class='far fa-user-circle' id="navi-bar"></i>&nbsp;&nbsp;<%= user.firstName %> <%= user.lastName %>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/user_check_profile">Check Profile</a></li>
                          <li><a class="dropdown-item" href="/user_edit_acc">Edit Profile</a></li>
                          <li><hr class="dropdown-divider"></li>
                          <li><a class="dropdown-item" href="/logout" id="logoutBtn">Logout</a></li>
                        </ul>
                    </li>
                </div>
            </div>
        </div>
    </nav>

    <!-- User Add Reservation Section -->
    <section id="addReservation" class="container user-section">
        <h1>Add a Reservation</h1>
        <hr>

        <!-- Date Picker -->
        <div class="add-res-date">
            <label for="datePicker"><strong>Select Date:</strong></label>
            <input type="date" id="datePicker" class="form-control" name="date" value="<%= selectedDate %>">
        </div>

        <!-- Reservation Form -->
        <form action="/user_add_res" method="POST">
            <input type="hidden" id="selectedDate" name="date" value="<%= selectedDate %>">

            <div class="info">
                <div class="selects">
                    <label for="location">Location:</label>
                    <select class="form-select form-select-sm" name="location" required>
                        <option value="1st Floor">1st Floor</option>
                        <option value="2nd Floor">2nd Floor</option>
                        <option value="3rd Floor">3rd Floor</option>
                    </select>

                    <label for="room">Room:</label>
                    <select class="form-select form-select-sm" name="room" required>
                        <option value="Room 1A">Room 1A</option>
                        <option value="Room 1B">Room 1B</option>
                        <option value="Room 2A">Room 2A</option>
                        <option value="Room 2B">Room 2B</option>
                    </select>

                    <label for="time">Time:</label>
                    <select class="form-select form-select-sm" name="time" required>
                        <option value="07:00-08:00">07:00-08:00</option>
                        <option value="08:00-09:00">08:00-09:00</option>
                        <option value="09:00-10:00">09:00-10:00</option>
                        <option value="10:00-11:00">10:00-11:00</option>
                        <option value="11:00-12:00">11:00-12:00</option>
                        <option value="12:00-13:00">12:00-13:00</option>
                        <option value="13:00-14:00">13:00-14:00</option>
                        <option value="14:00-15:00">14:00-15:00</option>
                        <option value="15:00-16:00">15:00-16:00</option>
                        <option value="16:00-17:00">16:00-17:00</option>
                        <option value="17:00-18:00">17:00-18:00</option>
                    </select>
                </div>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="confirmCheck" required>
                <label class="form-check-label" for="confirmCheck">
                    Yes, all information is correct.
                </label>
            </div>

            <button type="submit" class="btn btn-success">Save Reservation</button>
            <a class="btn btn-outline-secondary" href="/user_view_res">Back</a>
        </form>
    </section>

    <script>
        document.getElementById("datePicker").addEventListener("change", function () {
            document.getElementById("selectedDate").value = this.value;
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
