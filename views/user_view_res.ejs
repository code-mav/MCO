<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Reservations</title>
    <link rel="stylesheet" href="/css/user_style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e670541006.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Library Reservation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div id="userProfile" class="d-flex align-items-center text-white">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class='far fa-user-circle' id="navi-bar"></i>&nbsp;&nbsp;<%= user.firstName %> <%= user.lastName %>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/user_check_profile">Check Profile</a></li>
                          <li><a class="dropdown-item" href="/user_edit_acc">Edit Profile</a></li>
                          <li><hr class="dropdown-divider"></li>
                          <li><a class="dropdown-item" href="/logout" id="logoutBtn">Logout</a></li>
                        </ul>
                    </li>
                </div>
            </div>
        </div>
    </nav>

    <!-- User View Reservations -->
    <section id="viewReservation" class="container user-section">
        <h1>View Reservations</h1>
        <hr>

        <!-- Date Picker -->
        <div class="date">
            <label for="datePicker"><strong>Select Date:</strong></label>
            <input type="date" id="datePicker" class="form-control" value="<%= selectedDate %>" onchange="updateReservations()">
        </div>

        <!-- Display Selected Date -->
        <h3>Selected Date: <span id="displayDate"><%= selectedDate %></span></h3>

        <!-- Reservations Table -->
        <table class="table table-secondary table-striped table-bordered border-success-subtle" id="reservationsTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Room</th>
                    <th>Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (reservations.length > 0) { %>
                    <% reservations.forEach((res, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= res.userName %></td>
                            <td><%= res.location %></td>
                            <td><%= res.room %></td>
                            <td><%= res.time %></td>
                            <td>
                                <form action="/delete_reservation/<%= res._id %>" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No reservations for this date.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <a class="btn btn-outline-secondary" href="/user">Back</a>
        <a class="btn btn-outline-success" href="/user_add_res">Add a Reservation</a>
    </section>

    <script>
        function updateReservations() {
            let selectedDate = document.getElementById('datePicker').value;
            if (selectedDate) {
                window.location.href = `/user_view_res?date=${selectedDate}`;
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
